<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>redbull-spielberg-experience</display-name>

    <!-- Welcome -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- JNDI DataSource -->
    <resource-ref>
        <description>Red Bull Spielberg DB</description>
        <res-ref-name>jdbc/redbull</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- =================== Filtri =================== -->
    <filter>
        <filter-name>UTF8Filter</filter-name>
        <filter-class>filter.UTF8Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UTF8Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CartBadgeFilter</filter-name>
        <filter-class>filter.CartBadgeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CartBadgeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/orders</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/order</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/checkout/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <!-- =================== Servlet Admin =================== -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>control.admin.AdminDashboardServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAdminServlet</servlet-name>
        <servlet-class>control.admin.UserAdminServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAdminServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdminServlet</servlet-name>
        <url-pattern>/admin/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminStatsServlet</servlet-name>
        <servlet-class>control.admin.AdminStatsServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminStatsServlet</servlet-name>
        <url-pattern>/admin/stats</url-pattern>
    </servlet-mapping>

    <!-- Booking Availability (JSON) -->
    <servlet>
        <servlet-name>BookingAvailabilityServlet</servlet-name>
        <servlet-class>control.BookingAvailabilityServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingAvailabilityServlet</servlet-name>
        <url-pattern>/booking/availability</url-pattern>
    </servlet-mapping>

    <!-- =========== Gestione Slot (UNICA servlet) =========== -->
    <servlet>
        <servlet-name>AdminSlotsServlet</servlet-name>
        <servlet-class>control.admin.AdminSlotsServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminSlotsServlet</servlet-name>
        <url-pattern>/admin/slots</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSlotsServlet</servlet-name>
        <url-pattern>/admin/slots/generate</url-pattern>
    </servlet-mapping>

    <!-- =================== Error pages =================== -->
    <error-page>
        <error-code>404</error-code>
        <location>/views/errors/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/errors/500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/views/errors/500.jsp</location>
    </error-page>

    <!-- =================== JSP config =================== -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>